@model ErrorViewModel
@{
    ViewData["Errore"] = "Errore";
}

<div class="container d-flex align-items-center justify-content-center flex-column text-center mt-5">
    <h1 class="text-quinary-rgb">@ViewData["Errore"]</h1>
    <h2 class="text-quinary-rgb">@Model.Message</h2>
    <form method="post" class="d-flex flex-column w-25">
        @if(Model.ReturnUrl!=null)
        {
        <button type="submit" class="btn bg-tertiary-rgb-opacity-8 text-secondary-rgb my-3"
        asp-action="@Model.ReturnUrl" asp-controller="@Model.ReturnController">Ok</button>
        }
    </form>
</div>

